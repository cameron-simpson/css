#!/bin/sh

yr=70
modes=-cm
recurse=

case $0 in *197[0-9])	yr=`expr "$0" : '.*\(7[0-9]\)$'` ;; esac
case $1 in -r) recurse=1; shift ;; esac
case $1 in -a) modes=${modes}a; shift ;; esac

if [ $recurse ]
then	set x `find ${1-.} ${1+"$@"} -type f -print`; shift
fi

exec touch $modes 01010000$yr ${1+"$@"}
