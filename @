#!/bin/sh
#
# Open fresh shell on target machine in new window.
#	- Cameron Simpson <cs@zip.com.au> 23oct2001
#

[ $# = 0 ] && case $SYSTEMID in
		cisra)	set linux,solaris,cass,sweet,ivory ;;
		home)	set jekyll,janus,alpha ;;
		*)	echo "$0: no default host list for SYSTEMID == \"$SYSTEMID\"" >&2
			exit 1
			;;
              esac

host=$1; shift

case "$host" in
    *,*)
	for h in `echo "$host" | tr , ' '`
	do  "$0" "$h" ${1+"$@"}
	done
	exit 0
	;;
esac

case $host in
    *@*)	;;
    *)		host=$host@$SYSTEMID ;;
esac

exec rterm "$host" ${1+"$@"}
