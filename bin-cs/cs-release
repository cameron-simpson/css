def lastvalue(key, value=None):
  ''' Retrieve or store a lastvalue.
  '''
  with pfx('lastvalue(%r)', key):
    if not key or '/' in key or key.startswith('.'):
      raise ValueError('invalid key')
    last_filename = os.path.join(os.environ['HOME'], 'var', 'log', 'lastvalue', key)
    if value is None:
      with Pfx(last_filename):
        with open(last_filename):
          last = None
          for lineno, line in enumerate(fp, 1):
            with Pfx(lineno):
              if not line.endswith('\n'):
                raise ValueError('incomplete line')
              last = line[:-1]
        return last
    else:
      with open(last_filename, 'a') as fp:
        print(value, file=fp)

