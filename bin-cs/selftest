#!/bin/sh
#
# Run self tests.
#       - Cameron Simpson <cs@zip.com.au> 10dec2011
#

set -ue

cmd=`basename "$0"`

main()
{
  usage="Usage: $cmd [-v] [-x] [--python pylibdir pysubtree]..."

  trace=${DEBUG:+set-x}
  vecho=:
  [ -t 1 ] && vecho=echo

  badopts=

  while [ $# -gt 0 ]
  do
    case $1 in
      -x)
        trace=set-x ;;
      -v)
        vecho=echo ;;
      --python)
        pylibdir=$2
        pysubdir=$3
        shift; shift
        test_python "$pylibdir" "$pysubdir" || return $?
        ;;
      --)
        shift; break ;;
      -?*)
        echo "$cmd: unrecognised option: $1" >&2
        badopts=1
        ;;
    esac
    shift
  done

  [ $# = 0 ] || { echo "$cmd: extra arguments: $*" >&2; badopts=1; }

  [ $badopts ] && { echo "$usage" >&2; return 2; }

  return 0
}

test_python()
{
  [ $# = 2 ] || { echo "$cmd: Usage: test_python pylibdir pysubdir" >&2; return 2; }
  (
    pylibdir=$1
    pysubdir=$2

    $vecho "syntax check $pylibdir/$pysubdir ..."
    find "$pylibdir/$pysubdir" -type f -name \*.py -print \
    | sort \
    | \
    { xit=0 
      while read -r py 
      do 
        pyc_state=state/pyc/$py
        if [ "$pyc_state" -nt "$py" ]
        then  $vecho "SKIP syntax $py - newer $pyc_state"
        else
          rm -f -- "$pyc_state"
          if $trace pfx "$py" env-dev python -tt -m py_compile "$py"
          then  $vecho "OK $py"; d=`dirname "$pyc_state"`; mkdir -p "$d"; >>"$pyc_state"
          else  echo "FAIL $py - bad syntax" >&2; xit=1
          fi
        fi
      done 
      return $xit 
    }

    $vecho "unit test $pylibdir/$pysubdir ..."
    find "$pylibdir/$pysubdir" -type f -name \*.py -print \
    | sort \
    | \
    { xit=0 
      while read -r py 
      do 
        pyu_state=state/pyu/$py
        if [ "$pyu_state" -nt "$py" ]
        then  $vecho "SKIP unittest $py - newer $pyu_state"
        else
          d=`dirname "$pyu_state"`; [ -d "$d" ] || mkdir -p "$d"
          >>"$pyu_state"
          unitest=`sed -n '${/^ *unittest\.main/p;}' "$py"` 
          [ -n "$unitest" ] || continue 
          rm -f "$pyu_state"
          pym=`expr "x$py" : "x$pylibdir"'/\(.*\).py' | tr / .` 
          if $trace env-dev -x python -tt -B -m "$pym"
          then  $vecho "OK unit test $py"; >>"$pyu_state"
          else  echo "FAIL: unitest $py" >&2; return 1
          fi
        fi
      done 
      return $xit 
    }
  )

  return $?
}

main ${1+"$@"}
