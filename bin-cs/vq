#!/bin/sh

[ $# -gt 0 ] || {
  echo "$0: missing words" >&2
  echo "Usage: $0 words..." >&2
  exit 2
}

word1=$1; shift

if [ $# = 0 ]
then  find "$HOME/dl/playon/" "$HOME/v/" "$HOME/vv/" -iname "*${word1}*"
else  find "$HOME/dl/playon/" "$HOME/v/" "$HOME/vv/" -iname "*${word1}*" | grepall "$word1" "$@"
fi
