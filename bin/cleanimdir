#!/bin/sh
#
# Clean cruft from an image collection.
# Ignore .* names.
#	- Cameron Simpson <cs@zip.com.au> 27mar2003
#

cmd=$0
usage="Usage: $cmd [-f] [-n] [directories...]"

doit=
imgptn='((PNG|JPEG|GIF) image data|MPEG video stream data)'
docptn='((ASCII|program|English|document) text|empty)$'

case $1 in
  -f)	doit=1; shift ;;
  -n)	doit=; shift ;;
esac

if [ $doit ]
then  trace=set-x
else  trace=echo
fi

# prune oversized thumbnails
find ${1+"$@"} ${1-.} \
	-type d -name .thumbnails -print -prune \
| while read thdir
  do  find "$thdir" -type f -size +20 -ls -exec $trace rm {} ';'
  done

# prune non-images
find ${1+"$@"} ${1-.} \
	\( \
	  \( -name '.?*' -prune \) \
	  -o \
	  \( \
	    ! -name Mykefile \
	  \) \
	\) \
	-type f \
| xxargs file \
| if [ $doit ]
  then
    egrep -v "$imgptn" \
    | egrep "$docptn" \
    | sed 's/:.*//' \
    | xxargs set-x rm
  else
    exec egrep -v "$imgptn"
  fi
