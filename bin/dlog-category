#!/bin/sh
#
# Report the default dlog category string.
# - Cameron Simpson <cs@cskk.id.au> 15feb2020
#

set -ue

cmd=$0
usage="Usage: $cmd [path]"

if [ $# = 0 ]
then  path=.
else  path=$1; shift
fi

[ $# = 0 ] || {
  echo "$cmd: extra arguments: $*" >&2
  echo "$usage" >&2
  exit 2
}

format={cs.dlog}
category=$( fstags ls -d -o "$format" -- "$path" )
[ -n "$category" ] && [ "x$category" != "x$format" ] && echo "$category"
