#!/usr/bin/env python3
#
# Bring up the named files in an editor for renaming.
#   - Cameron Simpson <cs@cskk.id.au> 22may2016
#

from __future__ import print_function
import sys
import os
import os.path
from cs.edit import edit_strings

USAGE = 'Usage: %s [-a] [pathnames...]'
EDITOR = 'vi'

def main(argv):
  cmd = os.path.basename(argv.pop(0))
  usage = USAGE % (cmd,)
  badopts = False
  use_all = False
  editor = os.environ.get('EDITOR', EDITOR)
  if argv and argv[0] == '-a':
    use_all = True
    argv.pop(0)
  if argv:
    names = argv
  else:
    names = sorted(
        [
            name for name in os.listdir('.') if name and name not in
            ('.', '..') and (use_all or not name.startswith('.'))
        ]
    )
    if not names:
      error("%s: no suitable names in the current directory", cmd)
      badopts = True
  if badopts:
    print(usage, file=sys.stderr)
    return 2
  xit = 0
  try:
    for name, newname in edit_strings(names, editor=editor, errors="ignore"):
      if newname != name:
        if os.path.exists(newname):
          error("%s: %s => %s: target exists", cmd, name, newname)
          xit = 1
        else:
          print(name, '=>', newname)
          try:
            os.rename(name, newname)
          except OSError as e:
            error("%s: %s => %s: %s", cmd, name, newname, e)
            xit = 1
  except ValueError as e:
    error("%s: %s", cmd, e)
    xit = 1
  return xit

def error(msg, *a):
  if a:
    msg = msg % a
  print(msg, file=sys.stderr)

if __name__ == '__main__':
  sys.exit(main(sys.argv))
