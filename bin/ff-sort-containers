#!/usr/bin/env python3

''' Sort a Firefox containers.json file.
'''

import json
import sys
from cs.fileutils import rewrite_cmgr

def sort_struct(J):
  J["identities"] = sorted(
      J["identities"], key=lambda C: (C["name"], C["userContextId"])
  )

def sort_cfile(filepath):
  ''' Sort the containers file `filepath` in place, leaving a backup.
  '''
  with open(filepath, 'r') as f:
    J = json.loads(f.read())
  sort_struct(J)
  with rewrite_cmgr(filepath, backup_ext='', keep_backup=True) as f:
    json.dump(J, f, indent=None, separators=(',', ':'))

if __name__ == '__main__':
  filepath, = sys.argv[1:]
  sort_cfile(filepath)
