#!/bin/sh
#
# List files with form feeds between them.
#	- Cameron Simpson <cs@zip.com.au> 14nov97
#

cmd=`basename "$0"`
usage="Usage: $cmd [-t] files..."

title=

badopts=
while :
do  case $1 in
        -t)	title=1 ;;
	--)	shift; break ;;
	-?*)	echo "$cmd: unrecognised option: $1" >&2; badopts=1 ;;
    esac
    shift
done

[ $# = 0 ] && { echo "$cmd: missing files" >&2; badopts=1; }

[ $badopts ] && { echo "$usage" >&2; exit 2; }

xit=0

first=1
for file
do
    if [ $first ]
    then    first=
    else    necho ''
    fi

    if [ $title ]
    then
	echo "$file"
	echo "$file" | sed 's/./=/g'
	echo
    fi

    cat <"$file" || xit=$?
done

exit $xit
