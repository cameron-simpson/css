#!/bin/sh -u
#
# Hand commands to FVWM with optional delay.
#	- Cameron Simpson <cs@zip.com.au> 18may2005
#

sleep=0

##[ -n "$FVWMCMDLOG" ] || { echo "$0: no \$FVWMCMDLOG envvar" >&2; exit 1; }
##[ -f "$FVWMCMDLOG" ] || { echo "$0: $FVWMCMDLOG missing!" >&2; exit 1; }
##exec >>"$FVWMCMDLOG"

first=1
if [ $# = 0 ]
then
  # don't use "cat" because I want unbuffered output
  while if [ -t 0 ]
	then  fvcmd=`readline 'fvwmcmd> '`
	else  read -r fvcmd
	fi
  do
    [ -n "$fvcmd" ] || continue
    if [ $first ]
    then  first=
    else  [ "$sleep" = 0 ] || sleep "$sleep"
    fi
    alert "fvwmcmd: $fvcmd"
    FvwmCommand "$fvcmd"
  done
else
  for fvcmd
  do
    [ -n "$fvcmd" ] || continue
    if [ $first ]
    then  first=
    else  [ "$sleep" = 0 ] || sleep "$sleep"
    fi
    ##alert "fvwmcmd: $fvcmd"
    FvwmCommand "$fvcmd"
  done
fi
