#!/bin/sh -u
#
# Permit outgoing traffic for a service to specified hosts (or "ALL").
#	- Cameron Simpson <cs@zip.com.au> 18oct2003
#

: ${FW_CHAIN_INPUT:=INPUT}
: ${FW_CHAIN_OUTPUT:=OUTPUT}
: ${FW_CHAIN_FORWARD:=FORWARD}

cmd=$0
usage="Usage: $cmd [-l] dest-port {ALL | hosts...}"

trace=

badopts=

dolog=
[ $# -gt 0 ] && [ "x$1" = x-l ] && { dolog=1; shift; }

if [ $# = 0 ]
then
    echo "$cmd: missing dest-port" >&2
    badopts=1
else
    dport=$1; shift
    if [ $# = 0 ]
    then
	echo "$cmd: missing ALL or hosts" >&2
	badopts=1
    fi
fi

[ $badopts ] && { echo "$usage" >&2; exit 2; }

target=ACCEPT
[ $dolog ] && target=LOGACCEPT

if [ "x$*" = xALL ]
then
    $trace iptables -I "$FW_CHAIN_OUTPUT" -p udp --destination-port "$dport" -j "$target"
    $trace iptables -I "$FW_CHAIN_INPUT" -p udp --source-port "$dport" -j "$target"
else
    for host in `hostips "$@"`
    do
      $trace iptables -I "$FW_CHAIN_OUTPUT" -p udp -d "$host" --destination-port "$dport" -j "$target"
      $trace iptables -I "$FW_CHAIN_INPUT" -p udp -s "$host" --source-port "$dport" -j "$target"
    done
fi
