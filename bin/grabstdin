#!/bin/sh
#
# Collect stdin and bg the named command, sending output to the
# console log, IGNHUPed.
#	- Cameron Simpson <cs@zip.com.au> 16sep98
#

: ${TMPDIR:=/tmp}

cons=$CONSOLE

tmp=$TMPDIR/grabstdin.$$

cat >"$tmp" || { rm -f "$tmp" 2>/dev/null; exit 1; }

exec >>"$cons" 2>&1

(
  rm "$tmp"
  trap '' 1	# ignore SIGHUP
  exec "$@"
) <"$tmp" &

exit 0
