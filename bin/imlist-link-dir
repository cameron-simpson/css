#!/bin/sh
#
# Populate a directory with symlinks to images chosen with imlist-pick.
#   - Cameron Simpson <cs@zip.com.au> 13oct2015
#

set -ue

cmd=$0
usage="Usage: $cmd target-dir imlist-pick-options..."

badopts=

if [ $# = 0 ]
then
  echo "$cmd: missing target-dir" >&2
  badopts=1
else
  target_dir=$1
  shift
fi

[ $badopts ] && { echo "$usage" >&2; exit 2; }

set -x

imlist-pick -a ${1+"$@"} \
| \
( cd "$target_dir" || exit 1
  rm -- * 2>/dev/null || :
  while read -r impath
  do
    base=$(basename "$impath")
    if [ -e "$base" ]
    then
      n=1
      while base2=$n-$base
            [ -e "$base2" ]
      do
        n=$(( n + 1 ))
      done
      base=$base2
    fi
    ln -s "$impath" "$base"
  done
)
