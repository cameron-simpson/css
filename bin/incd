#!/bin/sh
#
# Run command in another directory, possibly on another host.
# - Cameron Simpson <cs@cskk.id.au> 05mar2003
#

set -ue

cmd=$0
usage="Usage: $cmd [[user@]host:]dir [command [args...]]"

trace= do_trace=
[ -t 2 ] && trace=set-x do_trace=1

fstags_latest=incd.latest
set_latest=1
mayuseparent=
hostpart=
sshopts=

badopts=

if [ $# = 0 ]
then
  if target=$( fstags ls -d -o "{$fstags_latest}" . ) && [ -n "$target" ]
  then
    set_latest=
  else
    echo "$cmd: missing dir and no $fstags_latest fstag" >&2
    badopts=1
  fi
else
  target=$1; shift
  [ -n "$target" ] || {
    echo "$cmd: dir may not be empty" >&2
    badopts=1
  }
fi

if [ -n "$target" ]
then
  if hostpart=$( expr "x$target" : 'x\([a-z][-a-z0-9_@]*[a-z0-9]\):.*' )
  then
    dir=$(       expr "x$target" : 'x[a-z][-a-z0-9_@]*[a-z0-9]:\(.*\)' )
    if [ $# = 0 ]
    then
      sshopts=-t
      qcmd='${SHELL:-/bin/sh} --login'
    else
      qcmd=$( shqstr "$@" )
    fi
  else
    dir=$target
    if [ $# = 0 ]
    then
      echo "$cmd: missing command" >&2
      badopts=1
    fi
  fi
fi

[ $badopts ] && { echo "$usage" >&2; exit 2; }

if [ ! -d "$dir/." ] && [ $mayuseparent ]
then
    parent=`dirname "$dir"`
    [ -d "$parent/." ] && dir=$parent
fi

if [ -n "$hostpart" ]
then
  # update the latest tag
  if [ $set_latest ]
  then  $trace fstags tag . "$fstags_latest=\"$target\""
  fi
  qdir=$( shqstr "$dir" )
  exec $trace ssh $sshopts "$hostpart" "cd $qdir; exec $qcmd"
else
  [ -z "$do_trace" ] || set -x
  cd "$dir" || exit 1
  exec "$@"
fi
