#!/bin/sh
#
# Test is a file looks like a UNIX mbox file.
#       - Cameron Simpson <cs@zip.com.au> 24feb2013
#

set -ue

[ $# = 1 ] || { echo "Usage: $0 mbox" >&2; exit 2; }

mbox=$1
shift

[ -f "$mbox" ] || exit 1        # not a file: fail
[ -s "$mbox" ] || exit 0        # empty file: ok

# check that it starts wth "From "
from_=`sed 1q <"$mbox"`
case "$from_" in
  'From '*)
    exit 0
    ;;
esac
exit 1
