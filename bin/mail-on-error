#!/bin/sh -ue
#
# Run command. Send standard error by email if it fails.
#       - Cameron Simpson <cs@zip.com.au> 13sep2009
#

: ${TMPDIR:=/tmp}

cmd=`basename "$0"`
usage="Usage: $cmd [-x] {-S | -s subject} addresses command [args...]
  -x    Trace execution of command.
  -s    Specify subject line for email.
  -S    Specify that email subject line should be:
          FAIL: command args..."

autosubj=
subj=
trace=

badopts=

while [ $# -gt 0 ]
do
  case $1 in
    -s) autosubj= subj=$2; shift ;;
    -S) autosubj=1 subj= ;;
    -x) trace=set-x ;;
    --) shift; break ;;
    -?*)echo "$cmd: unrecognised option: $1" >&2
        badopts=1
        ;;
    *)  break ;;
  esac
  shift
done

if [ $# = 0 ]
then
  echo "$cmd: missing addresses" >&2
  badopts=
else
  addrs=$1
  shift
fi

if [ $# = 0 ]
then
  echo "$cmd: missing command" >&2
  badopts=1
else
  if [ $autosubj ]
  then
    subj="FAIL: $*"
  else
    if [ -z "$subj" ]
    then
      echo "$cmd: missing -s subject" >&2
      badopts=1
    fi
  fi
fi

[ $badopts ] && { echo "$usage" >&2; exit 2; }

tmp=$TMPDIR/$cmd.err.$$
trap 'rm -f "$tmp"' 0 1 2 3 15

xit=0
$trace "$@" 2>"$tmp" || xit=$?
cat "$tmp" >&2
[ $xit = 0 ] && exit 0
$trace mailsubj -s "$subj" "$addrs" <"$tmp"
exit $xit
