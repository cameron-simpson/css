#!/bin/sh -ue
#
# Run command. Send standard error by email if it fails.
#       - Cameron Simpson <cs@zip.com.au> 13sep2009
#

: ${TMPDIR:=/tmp}

cmd=`basename "$0"`
usage="Usage: $cmd [-x] [-s subject] addresses command [args...]
  -x    Trace execution of command.
  -s    Specify subject line for email. Default:
          FAIL: command args..."

subj=
trace=

badopts=

while [ $# -gt 0 ]
do
  case $1 in
    -S) subj=; echo "$0: OBSOLETE use of -S option" >&2 ;;
    -s) subj=$2; shift ;;
    -x) trace=set-x ;;
    --) shift; break ;;
    -?*)echo "$cmd: unrecognised option: $1" >&2
        badopts=1
        ;;
    *)  break ;;
  esac
  shift
done

if [ $# = 0 ]
then
  echo "$cmd: missing addresses" >&2
  badopts=
else
  addrs=$1
  shift
fi

if [ $# = 0 ]
then
  echo "$cmd: missing command" >&2
  badopts=1
else
  [ -n "$subj" ] || subj="FAIL: $*"
fi

[ $badopts ] && { echo "$usage" >&2; exit 2; }

tmp=$TMPDIR/$cmd.err.$$
trap 'rm -f "$tmp"' 0 1 2 3 15

xit=0
$trace "$@" 2>"$tmp" || xit=$?
cat "$tmp" >&2
[ $xit = 0 ] && exit 0
$trace mailsubj -s "$subj" "$addrs" <"$tmp"
exit $xit
