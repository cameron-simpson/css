#!/bin/sh
#
# Multi-rsync. Run rsyncs in parallel to multiple hosts, prefix output.
#       - Cameron Simpson <cs@zip.com.au> 19apr2012
#

set -ue

trace=${DEBUG:+set-x}

cmd=$0
usage="Usage: $cmd [rsync-opts...] src hostlist:dst"

badopts=

if [ $# -lt 2 ]
then
  echo "$cmd: missing src or dst" >&2
  badopts=1
else
  # get last arg
  eval "dst=\${$#}"
  # now keep all but last arg
  nargs=$#
  pos=0
  for arg
  do
    pos=$((pos+1))
    [ $pos = 1 ] && set --
    [ $pos = $nargs ] || set -- ${1+"$@"} "$arg"
  done
  case "$dst" in
    *@*:*)
      userpfx=`expr "x$dst" : 'x\([^@]*@\).*'`
      hostlist=`expr "x$dst" : 'x[^@]*@\([^:]*\):.*'`
      dst=`expr "x$dst" : 'x[^@]*@[^:]*:\(.*\)' || :`
      ;;
    *:*)
      userpfx=
      hostlist=`expr "x$dst" : 'x\([^:]*\):.*'`
      dst=`expr "x$dst" : 'x[^:]*:\(.*\)' || :`
      ;;
    *)echo "$cmd: dst: missing hostlist: $dst" >&2
      badopts=1
      ;;
  esac
fi

[ $badopts ] && { echo "$usage" >&2; exit 2; }

(
  for host in $(hostlist "$hostlist")
  do
    pfx "$host" $trace rsync "$@" "$userpfx$host:$dst" &
  done
  wait
)
