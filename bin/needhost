#!/bin/sh
#
# Check we're on the specified host.
#	- Cameron Simpson <cs@zip.com.au> 02dec2002
#

cmd=$0

quiet=1
[ "x$1" = "x-v" ] && { quiet=; shift; }

[ $# -gt 0 ] || { echo "Usage: $cmd [-v] { host | [host]@systemid }..." >&2; exit 2; }

for target
do
  case "$target" in
    $HOST|$HOSTNAME|$HOST@$SYSTEMID|$HOSTNAME@$SYSTEMID|@$SYSTEMID)
	exit 0
	;;
  esac
done

[ $quiet ] \
  || echo "$cmd: $HOST@$SYSTEMID or its variants don't match \"$*\"" >&2
exit 1
