#!/bin/sh
#
# Print selected columns with awk.
# Accepts -Fc for field separator.
#	- Cameron Simpson <cs@zip.com.au> 24aug99
#

sep=
case "$1" in -F*) sep=$1; shift ;; esac

[ $# -gt 0 ] || { echo "Usage: $0 columns..." >&2; exit 2; }

print="\$$1"; shift
for col
do  print="$print \" \" \$$col"
done

exec awk $sep "{print $print}" ${1+"$@"}
