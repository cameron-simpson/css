#!/bin/sh
#
# Compare the RPMs on this host with those on another host, checking
# names and architecture, not versions.
#       - Cameron Simpson <cs@zip.com.au> 26jul2011
#

set -ue

: ${TMPDIR:=/tmp}
: ${HOST:=`hostname | sed 's/\..*//'`}

trace=${DEBUG:+set-x}
rpmformat='%{NAME}.%{ARCH}\n'

cmd=`basename "$0"`
usage="Usage: $cmd [{-missing|-extra}] [-qf rpm-format] other-host
  -missing      Report RPMs missing on this (local) host.
  -extra        Report RPMs extra on this (local) host.
  -qf           Specify RPM query output format. Default: $rpmformat"

badopts=
mode=diff

while [ $# -gt 0 ]
do
  case $1 in
    -missing)
        mode=missing ;;
    -extra)
        mode=extra ;;
    -qf)rpmformat=$2; shift ;;
    -yum)
        mode=yum-install ;;
    --) shift; break ;;
    -?*)echo "$cmd: unrecognised option: $1" >&2
        badopts=1
        ;;
    *)  break ;;
  esac
  shift
done

if [ $# = 0 ]
then
  echo "$cmd: missing other-host" >&2
  badopts=1
else
  otherhost=$1
  shift
  if [ $# -gt 0 ]
  then
    echo "$cmd: extra arguments after other-host: $*" >&2
    badopts=1
  fi
fi

[ $badopts ] && { echo "$usage" >&2; exit 2; }

xit=0

tmpf=$TMPDIR/$cmd.$$
tmpf1=$tmpf.a
tmpf2=$tmpf.b
trap 'rm -f "$tmpf".*' 0
trap 'rm -f "$tmpf".*; exit 1' 1 3 15

set -- rpm -qa --qf "$rpmformat"
rcmd=`shqstr "$@"`

( 
  $trace tag_fd 2 "$otherhost" sshto "$otherhost" "$rcmd" | sort -u >"$tmpf1" &
  $trace "$@" | sort -u >"$tmpf2" &
  wait
  case "$mode" in
    diff)
      $trace diff -u "$tmpf2" "$tmpf1" | sed -n "1,2d; s/^-/$HOST: /p; s/^+/$otherhost: /p"
      ;;
    missing)
      $trace comm -13 "$tmpf2" "$tmpf1"
      ;;
    extra)
      $trace comm -23 "$tmpf2" "$tmpf1"
      ;;
    common)
      $trace comm -12 "$tmpf2" "$tmpf1"
      ;;
    yum-install)
      missing=$($trace "$0" -missing -qf "$rpmformat" "$otherhost")
      if [ -n "$missing" ]
      then
        ( set -- $missing
          set -x
          exec su - -c "set -x; yum install $*"
        )
      fi
      ;;
    *)
      echo "$cmd: unimplemented mode: $mode" >&2
      exit 1
      ;;
  esac
)
