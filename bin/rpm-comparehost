#!/bin/sh
#
# Compare the RPMs on this host with those on another host, checking
# names and architecture, not versions.
#       - Cameron Simpson <cs@zip.com.au> 26jul2011
#

set -ue

: ${TMPDIR:=/tmp}

rpmformat='%{NAME}.%{ARCH}\n'

cmd=`basename "$0"`
usage="Usage: $cmd [-qf rpm-format] other-host"

badopts=

while [ $# -gt 0 ]
do
  case $1 in
    -qf)rpmformat=$2; shift ;;
    --) shift; break ;;
    -?*)echo "$cmd: unrecognised option: $1" >&2
        badopts=1
        ;;
    *)  break ;;
  esac
  shift
done

if [ $# = 0 ]
then
  echo "$cmd: missing other-host" >&2
  badopts=1
else
  otherhost=$1
  shift
  if [ $# -gt 0 ]
  then
    echo "$cmd: extra arguments after other-host: $*" >&2
    badopts=1
  fi
fi

[ $badopts ] && { echo "$usage" >&2; exit 2; }

xit=0

tmpf=$TMPDIR/$cmd.$$
trap 'rm -f "$tmpf"; exit $xit' 0
trap 'rm -f "$tmpf"; exit 1' 1 3 15

set -- rpm -qa --qf "$rpmformat"
rcmd=`shqstr "$@"`

tag_fd 2 "$otherhost" sshto "$otherhost" "$rcmd" | sort >"$tmpf"
"$@" | sort | diff -u - "$tmpf" | sed -n "1,2d; s/^-/$otherhost: /p; s/^+/local: /p"
