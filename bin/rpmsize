#!/bin/sh
#
# Report the size of the installed files associated with an RPM.
#	- Cameron Simpson <cs@zip.com.au> 07apr2002
#

cmd=`basename "$0"`
usage="Usage: $cmd [rpmnames...]"

tally()
{
    rpm -ql "$rpm" \
    | xxargs ls -ld \
    | awk 'BEGIN	{ size=0 }
	   /^-/		{ size+=$5 }
	   END		{ print size }'
}

if [ $# = 0 ]
then
    if [ -t 0 ]
    then
	set -x
	exec rpm -qa
    else
	exec cat
    fi | xxargs "$0"
else
    for rpm
    do  size=`tally "$rpm"`
	echo "$size	$rpm"
    done
fi
