#!/bin/sh
#
# Invoke webalizer with arbitrary settings.
#       - Cameron Simpson <cs@zip.com.au> 19mar2012
#

set -ue

: ${TMPDIR:=/tmp}

cmd=`basename "$0"`
usage="Usage: $cmd -d reportdir template-webalizer-config Setting=value... /path/to/logfile..."

trace=set-x
tplt=/home/webalizer/webalizer.conf.tplt
wd=`pwd`
reportbase=/logs/webalizer

badopts=

while [ $# -gt 0 ]
do
  case "$1" in
    -d) reportdir=$2; shift ;;
    --) shift; break ;;
    -?*)echo "$cmd: unrecognised option: $1" >&2; badopts=1 ;;
    *)  break ;;
  esac
  shift
done

if [ -z "$reportdir" ]
then
  echo "$cmd: missing -d reportdir" >&2
  badopts=1
fi

if [ $# = 0 ]
then
  echo "$cmd: missing template-webalizer-config" >&2
  badopts=1
else
  tplt=$1
  shift
  [ -f "$tplt" ] || { echo "$cmd: template config missing: $tplt" >&2
                      badopts=1
                    }
fi

tmppfx=$TMPDIR/$cmd.$$

trap 'rm -f "$tmppfx"*' 0
trap 'rm -f "$tmppfx"*; exit 1' 1 3 15

patchfile=$tmppfx-patch
>>"$patchfile"

# gather up special settings
while [ $# -gt 0 ]
do
  case "$1" in
    [A-Z]*=*)
      setting=`expr "x$1" : 'x\([A-Z][^=]*\)=.*'`
      value=`expr "x$1" : 'x[A-Z][^=]*=\(.*\)'`
      printf '%s %s\n' "$setting" "$value" >>"$patchfile"
      ;;
    *)break
      ;;
  esac
  shift
done

if [ $# = 0 ]
then
  echo "$cmd: missing logfiles" >&2
  badopts=1
else
  for logfile
  do
    [ -f "$logfile" ] || echo "$cmd: missing $logfile" >&2
  done
fi

[ $badopts ] && { echo "$usage" >&2; exit 2; }

conf=$reportdir/webalizer.conf
imagesdir=$reportdir

[ -d "$reportdir/." ] || $trace mkdir "$reportdir"
[ -d "$reportdir/hist/." ] || $trace mkdir "$reportdir/hist"
echo "OutputDir $reportdir" >>"$patchfile"
echo "HistoryName $reportdir/hist/webalizer.hist" >>"$patchfile"
echo "IncrementalName $reportdir/hist/webalizer.current" >>"$patchfile"

cat "$patchfile"
$trace patch-config -I -o "$conf" "$tplt" "$patchfile"
$trace merge-apache-logs "$@" | $trace webalizer -c "$conf" -
