#!/usr/bin/env py26+
#
# Fetch or secrete a secret.
#	- Cameron Simpson <cs@zip.com.au> 09nov1999
#
# Python port for better secret name syntax. - cameron 18mar2008
#

import sys
from cs.secret import Secret
import cs.secret
import cs.sh
from cs.misc import cmd

usage="Usage: %s [key [field=value]...]" % cmd

args=sys.argv[1:]
if  len(args) == 0:
  for secret in cs.secret.list():
    print secret
  sys.exit(0)

secret=args.pop(0)

if len(args) == 0:
  try:
    S=Secret(secret)
  except IOError, e:
    print >>sys.stderr, "%s: %s" % (cmd, e)
    sys.exit(1)
  ks=S.keys()
  ks.sort()
  sep=''
  for k in ks:
    sys.stdout.write("%ssecret%s=%s" % (sep, k, cs.sh.quotestr(str(S[k]))))
    sep='; '
  sys.stdout.write("\n")
  sys.stdout.flush()
  sys.exit(0)

print >>sys.stderr, "%s: setting secret values not implemented" % (cmd,)
sys.exit(1)
