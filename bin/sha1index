#!/usr/bin/python

import sys
from cs.hashutils import hashfile

cmd = sys.argv[0]
args = sys.argv[1:]
if not args:
  args = ('-',)

xit = 0

for path in args:
  if path == '-':
    for path in sys.stdin:
      if not path.endswith('\n'):
        raise ValueError, "%s: missing newline on standard input" % (cmd,)
      path = path[:-1]
      try:
        H = hashfile(path)
      except IOError, e:
        print >>sys.stderr, "%s: %s: %s" % (cmd, path, e)
        xit = 1
        continue
      print H.hexdigest(), path
  else:
    try:
      H = hashfile(path)
    except IOError, e:
      print >>sys.stderr, "%s: %s: %s" % (cmd, path, e)
      xit = 1
      continue
    print H.hexdigest(), path

sys.exit(xit)
