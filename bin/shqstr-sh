#!/bin/sh
#
# Shell-only shqstr.
# Relies on printf and a sed that copes with no trailing newline.
# Requested by Zoong Do Dung PHAM.
#       - Cameron Simpson <cs@zip.com.au> 09dec2010
#

set -ue

subst="s/'/'\\\\''/g; s/^./'/; s/.\$/'/"

sep=
for arg
do
  case "$arg" in
    *\'*) qarg=`printf ".%s.\n" "$arg" | sed "$subst"` ;;
    *)    qarg="'$arg'" ;;
  esac
  printf "$sep%s" "$qarg"
  sep=' '
done
echo
