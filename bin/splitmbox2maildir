#!/usr/bin/env python -tt
#
# Read UNIX mbox format on stdin, write messages to the named maildir.
#       - Cameron Simpson <cs@cskk.id.au> 08nov2006
#

import sys
import cs.mail

maildir=cs.mail.Maildir(sys.argv[1])
fp=None

for line in sys.stdin:
  if line[:5] == "From ":
    if fp is not None:
      newname=fp.close()
      print newname
    fp=maildir.newItem()
    fp.write("From_: ")
    fp.write(line[5:])
  else:
    fp.write(line)

if fp is not None:
  newname=fp.close()
  print newname

sys.exit(0)
