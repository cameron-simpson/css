#!/bin/sh
#
# Run a command via su, quoted to preserve the argument list.
# Unfortunate conflict with "sux", the "su with X11 $DISPLAY".
# Which I don't use! Yay!
#       - Cameron Simpson <cs@zip.com.au> 03soct2011
#

set -ue

: ${DEBUG:=}

cmd=$0
usage="Usage: $cmd [-] [-u user] [-x] [--] command [args...]"

trace=${DEBUG:+set-x}
setx=${DEBUG:-:}${DEBUG:+set-x}
suargs=
user=root

badopts=

while [ $# -gt 0 ]
do
  case $1 in
    -)  suargs="$suargs $1" ;;
    -u) user=$2; shift ;;
    -x) trace=set-x setx='set -x' ;;
    --) shift; break ;;
    -?*)echo "$cmd: unrecognised option: $1" >&2
        badopts=1
        ;;
    *)  break ;;
  esac
  shift
done

if [ $# = 0 ]
then
  echo "$cmd: missing command" >&2
  badopts=1
fi

[ $badopts ] && { echo "$usage" >&2; exit 2; }

shcmd=`shqstr "$@"`
##set -x
exec $trace su $suargs "$user" -c "$setx; exec $shcmd"
