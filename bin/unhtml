#!/bin/sh
#
# Mangle HTML to put URLs inline with the links for easy grabbing.
#	- Cameron Simpson <cs@cskk.id.au> 17may2002
#

cmd=$0
usage="Usage: $cmd [-a] [-c] [-cols] [files...]
        -a      No anchors - don't mangle HTML to show URLs.
        -c      Clean: run code through htclean.
        -cols   Use \"cols\" columns."

mangle=1
cols=
clean=

# load default options
eval "set -- $UNHTML_OPTS "' ${1+"$@"}'

badopts=
while :
do
  case "$1" in
    -a)  mangle= ;;
    +a)  mangle=1 ;;
    -c)  clean=1 ;;
    +c)  clean= ;;
    -[1-9]*) cols=`expr "x$1" : 'x-\(.*\)'` ;;
    --)  shift; break ;;
    -?*) echo "$cmd: unrecognised option: $1" >&2; badopts=1 ;;
    *)   break ;;
  esac
  shift
done

[ $badopts ] && { echo "$usage" >&2; exit 2; }

[ -n "$cols" ] || cols=`ttysize|awk '{print$1}'`
w3cols=
[ -n "$cols" ] && w3cols="-cols $cols"

if [ $# = 0 ]
then  detab
else  for file
      do  case "$file" in
            -)  cat ;;
            http://* | https://* | ftp://* )
                wget -O - "$file" ;;
            *)  cat "$file" ;;
          esac
      done
fi \
| if [ $clean ]; then htclean; else cat; fi \
| LC_ALL=C html-unsplit \
| LC_ALL=C sed 's|</ *[Aa] *>|&|g' \
| LC_ALL=C tr '\015' '\012' \
| if false && [ $mangle ]
  then set-x perl -pe 's;<a\s[^>]*\bhref="((http|https):[^"]*)"[^>]*>[^<]*</a>; $& [$1];gi'
  else cat
  fi \
| if :
  then  set-x lynx -stdin -dump
  else  set-x w3m $w3cols -dump -T text/html
  fi \
| LC_ALL=C sed 's/[     ][      ]*$//'
