#!/bin/sh
#
# Locate and update the local tags file.
# Recite "set tags=/path/to/tagsfile".
#   - Cameron Simpson <cs@zip.com.au> 28feb2017
#

exec 3>&1 2>/dev/tty 1>&2
if tags=$(findup tags)
then
  ctags-update -o "$tags" -- "$@" >&2
  echo "set tags=$tags" >&3
else
  echo 'set tags=NO-TAGS' >&3
fi
exec 1>&- 2>&- 3>&-
sleep 5
