#!/bin/sh
#
# Run vmstat as with the modern -t option. Written for vmstats with
# no -t option.
#   - Cameron Simpson <cs@zip.com.au> 28oct2014
#

vmstat ${1+"$@"} \
| \
{ while read -r line
  do
    case "$line" in
      [0-9]*) echo "$line `date +'%Y-%m-%d %H:%M:%S %Z'`" ;;
      *)      echo "$line" ;;
    esac
  done
  :
}
