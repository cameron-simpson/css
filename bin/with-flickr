#!/usr/bin/python -tt
#
# Flickr tool.
#       - Cameron Simpson <cs@zip.com.au> 18dec2007
#

from cs.flickr import FlickrURL
from cs.misc import cmd
import sys

usage="Usage: %s imurl photo-page-URLs\n" % cmd

badopts=False

args=sys.argv[1:]
if len(args) == 0:
  error("missing operator")
  badopts=True
else:
  op=args.pop(0)
  if op == "imurl":
    if len(args) == 0:
      error("%s: missing photo-page-URLs" % op)
      badopts=True
  else:
    error("unsupported operator: %s" % op)
    badopts=True

if badopts:
  sys.stderr.write(usage)
  sys.exit(2)

if op == "imurl":
  for photoPageURL in args:
    print FlickrURL(photoPageURL).imageURL()
else:
  assert False, \
         "unhandled operator: %s" % op
