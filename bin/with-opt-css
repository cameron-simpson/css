#!/bin/sh -ue
#
# Try to set up the css env, then run a command.
# If no command, run "env".
#       - Cameron Simpson <cs@zip.com.au> 22may2009
#

set -ue

cmd=$0
usage="Usage: $cmd [-d optcssdir] [command [args...]]"

: ${OPTCSS:=''}

badopts=

while [ $# -gt 0 ]
do
  case $1 in
    -d) OPTCSS=$2; shift ;;
    --) shift; break ;;
    -?) echo "$cmd: unrecognised option: $1" >&2
        badopts=1
        ;;
    *)  break ;;
  esac
  shift
done

[ $badopts ] && { echo "$usage" >&2; exit 2; }

[ $# -gt 0 ] || set -- env

if [ -z "$OPTCSS" ]
then
  bindir=`dirname "$0"`
  bindir=`cd "$bindir"; pwd`
  OPTCSS=`dirname "$bindir"`
fi

# turn $OPTCSS into full path
case "$OPTCSS" in
  /*) ;; *) OPTCSS=`cd "$OPTCSS"; pwd` ;;
esac

if [ ! -s "$OPTCSS/env.sh" ]
then
  echo "$cmd: no $OPTCSS/env.sh, aborting" >&2
  exit 1
fi

export OPTCSS
. "$OPTCSS/env.sh"
exec "$@"
