#!/bin/sh -u
#
# Look for torrents in various search engines.
#	- Cameron Simpson <cs@zip.com.au> 23jun2005
#

cmd=`basename "$0"` || cmd=$0
usage="Usage: $cmd query"

[ $# = 0 ] && { echo "$usage" >&2; exit 2; }

exec search bittorrent,bitoogle,throughput,btbot,yotoshi,isohunt,torrentspy,mininova,torrentreactor "$@"
