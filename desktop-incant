#!/bin/sh -u
#
# Incant basic desktop settings except for backgrounds for FVWM.
#	- Cameron Simpson <cs@zip.com.au> 24mar2003
#

: ${DESKTOPSET:=desktop}

if [ $# = 0 ]
then
  "$0" - | fvwmcmd
else
  echo 'Colorset 1023 Foreground Green, Background Black'

  seq 0 63 \
  | awk '{print "*FvwmBacker: Command (Desk " $1 ") colorset 1023"
	  csnum=2048+$1
	  print "Colorset " csnum " fg rgb:90/ff/ff, bg rgb:00/00/20, hi green, sh green, RootTransparent"
	  print "*FvwmBacker: Command (Desk " $1 ") MenuStyle \"*\" MenuColorset " csnum }'

  idsetlist "$DESKTOPSET" name \
  | awk '$2 != "." { print "DesktopName", $1, $2 }'
fi
