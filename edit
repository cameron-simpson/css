#!/bin/sh
#
# Edit a file, making a template if needed.
#	- Cameron Simpson <cs@zip.com.au> 27oct1995
#

EDITOR=${EDITOR:-vi}
export EDITOR

doscr=1

cmd=`basename "$cmd"`
usage="Usage: $cmd [+s] [-e editor] file"

badopts=

set -x
while :
do
  case $1 in
    +s)	doscr= ;;
    -e) EDITOR=$2; shift ;;
    --)	shift; break ;;
    -?*)echo "$cmd: unrecognised option: $1" >&2
	badopts=1
	;;
    *)	break ;;
  esac
  shift
done

if [ $# = 0 ]
then
    echo "$cmd: missing file" >&2
    badopts=1
else
    file=$1; shift
    [ $# = 0 ] || { echo "$cmd: extra arguments after file: $*" >&2
		    badopts=1
		  }
fi

case "$file" in
    *.pgp) exec pgpedit "$file" ;;
    *.gpg) exec gpgedit "$file" ;;
esac

# make templates
[ -s "$file" ] || { tplt "$file" >>"$file"
		    [ -s "$file" ] || rm "$file"
		  }

[ -s .exrc ] && { EXINIT="$EXINIT|source .exrc"
		  NEXINIT="$NEXINIT|source .exrc"
		  export EXINIT NEXINIT
		}

set -- "$EDITOR" "$file"

if [ $doscr ]
then
    dir=`dirname "$file"`
    cd "$dir" || exit 1
    dirjob=`dirjob`
    winjob "$dirjob" &
    wd=`pwd` || exit 1

    file=`basename "$file"` || exit 1
    case "$file" in
      -* | +* ) file=./$file ;;
    esac

    set scr -- "edit:$wd" "$EDITOR" "$file"
fi

set -x
exec "$@"
