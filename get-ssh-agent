#!/bin/sh
#
# Get the daemonised ssh-agent info.
#	- Cameron Simpson <cs@zip.com.au> 30jul2001
#

cmd=$0
usage="Usage: $cmd [-h] [-v] [--] [statefile]"

statefile=
verbose=
thishost=

badopts=

while [ $# -gt 0 ]
do
  case "$1" in
    -h)	thishost=1 ;;
    -v)	verbose=1 ;;
    --)	shift; break ;;
    -?*)echo "$cmd: unrecognised option: $1" >&2
	badopts=1
	;;
    *)	break ;;
  esac
  shift
done

[ $# = 0 ] || { statefile=$1; shift; }

[ $# = 0 ] || { echo "$cmd: extra arguments: $*" >&2; badopts=1; }

[ $badopts ] && { echo "$usage" >&2; exit 2; }

[ -z "$thishost" ] && have-ssh-agent && exec stash-ssh-agent -

# protect against rogue output
exec 3>&1 1>/dev/null

[ -n "$statefile" ] || statefile=`ssh-agent-statefile` || exit 1

[ -s "$statefile" ] \
&& . "$statefile" \
&& have-ssh-agent \
&& echo ". '$statefile'" >&3 \
&& { [ -z "$verbose" ] || ssh-add -l >&2; }
