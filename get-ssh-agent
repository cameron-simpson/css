#!/bin/sh
#
# Get the daemonised ssh-agent info.
#	- Cameron Simpson <cs@zip.com.au> 30jul2001
#

f=$VARRUN/ssh-agent-$HOST

verbose=
[ "x$1" = x-v ] && { verbose=1; shift; }

[ -s "$f" ] \
&& v=`cat "$f"` \
&& [ -n "$v" ] \
&& eval "$v" \
&& [ -n "$SSH_AGENT_PID" ] \
&& kill -0 "$SSH_AGENT_PID" 2>/dev/null \
&& echo "$v" \
&& { [ -z "$verbose" ] || ssh-add -l >&2; }
