#!/bin/sh
#
# Asynchronous getpageurls.	- Cameron Simpson <cs@zip.com.au>
#

async=1
if [ "x$1" = x-s ]
then  shift; async=
fi

# hack to permit leading subdir prefix
case $1 in
    ''|-*|*://*)	;;
    *)		dirpfx=$1; shift
		if subdir=`mkdirn "$dirpfx/$dirpfx"`
		then
		    cd "$subdir" || exit 1
		fi
		colour_echo white "`pwd`"
		L
		;;
esac

[ $# = 0 ] && { set x "`xunclip`"; shift; echo "$1"; }

ulimit -d 16384	## 16M process data limit

tmp=${TMPDIR:-/tmp}/gpu$$
for arg
do  echo "$arg"
done >"$tmp"
exec <"$tmp"
cat "$tmp"
rm "$tmp"
set -x
set getpageurls -q $HOME/var/log/httpgetd-queue
[ $async ] || exec "$@"
exec bgstdin "$@"
