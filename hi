#!/bin/sh
#
# The good morning stuff.	- Cameron Simpson <cs@zip.com.au>
#

: ${TMPDIR:=/tmp}

cmd=`basename "$0"`
hi=$HOME/rc/hi
dflt=.hi

pickn=

while [ $# -gt 0 ]
do
  case "$1" in
    -d)		hi=$2; shift ;;
    -[0-9]*)	pickn=`expr "x$1" : 'x-\([0-9]*\).*'` ;;
    --)		shift; break ;;
    *)		break ;;
  esac
  shift
done

[ $# = 0 ] && set -- $dflt

for task
do
  case "$task" in
    /*)	task=`expr "x$task" : 'x/\(.*[^/]\)/*$'`
	echo "# $task"
	cat "$hi"/* | egrep -i "$task"
	;;
    *)	cat -- "$hi/$task"
	;;
  esac
done \
| grep '^[^#]' \
| if [ -n "$pickn" ]; then pickn "$pickn"; else cat; fi \
| tee /dev/tty \
| urlshow
