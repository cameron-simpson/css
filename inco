#!/bin/sh
#
# Run command in a temporary checkout.
#	- Cameron Simpson <cs@zip.com.au> 04jul2003
#

cmd=`basename "$0"`
usage="Usage: $cmd module [-f] command [args...]"

withcoopts=
[ "x$1" = x-f ] && { withcoopts="$withcoopts $1"; shift; }

[ $# -lt 2 ] && { echo "$cmd: insufficient arguments" >&2
		  echo "$usage" >&2
		  exit 2
		}

module=$1; shift

exec withco $withcoopts "$module" incd "$@"
