#!/bin/sh
#
# Make a new log file.
#	- Cameron Simpson <cs@zip.com.au>
#

: ${LOGDIR:=$HOME/var/log}

cmd=$0
usage="Usage: $cmd [-n] [-v] logspec [logpath]"

verbose=
noroll=

badopts=
while :
do
    case $1 in
	-n)	noroll=1 ;;
	-v)	verbose=1 ;;
	--)	shift; break ;;
	-?*)	echo "$cmd: unrecognised option: $1" >&2; badopts=1 ;;
	*)	break ;;
    esac
    shift
done

case $# in
    2)	spec=$1 path=$2 ;;
    1)	spec=$1
	logname=`expr "x$spec" : 'x[^a-zA-Z_]*\([a-zA-Z_0-9]*\).*'`
	[ -n "$logname" ] || logname="[$spec]"
	path=$logname.$HOST
	;;
    *)	echo "$usage" >&2; exit 2 ;;
esac

case "$path" in
    /*)	;;
    *)	path=$LOGDIR/$path ;;
esac

dir=`dirname "$path"`
[ -d "$dir" ] || mkdir -p "$dir" || exit $?
[ $noroll ] || [ ! -s "$path" ] || logroll -z +daycode "$path"
>>"$path"

logmap -s "$spec" "$path" || exit $?
echo "mklog: `date` $spec=$path" >> $LOGDIR/mklog

[ -z "$verbose" ] || echo "$path"
