#!/bin/sh
#
# Produce thumbnails for the named image files.
#	- Cameron Simpson <cs@zip.com.au> 12sep2003
#

cmd=$0
usage="Usage: $cmd [-x] [XxY] {imagefile|dir}..."

thsize=48x48
trace=
verbose=
[ -t 1 ] && verbose=1

[ "x$1" = x-x ] && { trace=set-x; shift; }

case "$1" in
  [1-9]*x[1-9]*)	thsize=$1; shift ;;
esac

[ $# = 0 ] && { echo "$usage"; exit 2; }

xit=0

for file
do
  if [ -d "$file/." ]
  then
    ( cd "$file" || exit 1
      [ $verbose ] && pwd
      exec $trace "$0" *.jpg *.png
    ) || xit=1
    continue
  fi

  mkthumbnail -g "$thsize" "$file" || xit=1
done

exit $xit
