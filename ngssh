#!/bin/sh
#
# Bgssh to a netgroup.
#	- Cameron Simpson <cs@zip.com.au> 08feb2001
#

login=
[ "x$1" = x-l ] && { login=$2; shift; shift; }

[ $# -lt 2 ] && { echo "Usage: $0 [-l login] netgroup command" >&2; exit 2; }

ngrs=$1; shift

for h in `ngr $ngrs | wired`
do  [ -n "$login" ] && h=$login@$h
    set-x pfx $h bgssh "$h" "$*"
done

exit 0
