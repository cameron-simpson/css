#!/usr/bin/perl
#
# Convert a blank-line separated list of records to a ring-style
# leading-non-white delimited list.
#	- Cameron Simpson <cs@zip.com.au> 29jul96
#

$first=1;
while (defined($_=<STDIN>))
	{ chomp;
	  if (length)
		{ if (! $first)
			{ s/^\S/ $&/;
			}
		  else	{ $first=0;
			}
		  print $_, "\n";
		}
	  else
	  { $first=1;
	  }
	}
