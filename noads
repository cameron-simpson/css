#!/bin/sh
#
# Insert a new pattern in the adzapper config file.
#	- Cameron Simpson <cs@zip.com.au> 28feb2003
#

[ -t 0 -a -t 1 ] || { echo "$0: not on a terminal, aborting" >&2; exit 1; }

needhost $HOMEHOST@home		|| exit 1
cd $HOME/@/adzapper.sf/html	|| exit 1
umask 22
necho "Addresses to CC? "
read addrs || exit 1
bugcc "$addrs" withjob adzap cvsedit rc/patterns || exit 1
bugcc "$addrs" myke _scripts
