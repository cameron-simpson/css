#!/usr/bin/perl
#
# Demoronize the netscape bookmarks file.
#	- Cameron Simpson <cs@zip.com.au> 11mar98
#

use strict qw(vars);

my($left,$right);

while (<STDIN>)
{
  chomp;

  #          <DT><H3 ADD_DATE="893408524">Laws, Regulations & Enforcement</H3>
  #          <DT><A                             text      </A>
  #      1         2                            3        4
  if ( /^(\s*<dt><[_\w]+(\s+[a-z_]+="[^"]*")*\s*>)\s*(.*\S)\s*(<\/[_\w]+>)\s*$/i )
  {
    ($left,$_,$right)=($1,$3,$4);
    ## warn "[$left][$_][$right]\n";

    s/</&lt;/g;
    s/>/&gt;/g;
    s/&(?!(#\d+|\w+);)/&amp;/g;

    $_=$left.$_.$right;
  }

  s/<p>$//i;

  print $_, "\n";
}
