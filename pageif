#!/bin/sh
#
# Run a command, piping into a pager if stdout is a tty.
#	- Cameron Simpson <cs@zip.com.au> 27feb2000
#

: ${PAGER:=less}

# turn on autoquit, for less anyway
LESS="$LESS -E"
export LESS

if [ $# = 0 ]
then
    if [ -t 1 ]
    then  exec $PAGER
    else  exec cat
    fi
else
    if [ -t 1 ]
    then  ( "$@" 2>&1 & ) | $PAGER
    else  exec "$@"
    fi
fi
