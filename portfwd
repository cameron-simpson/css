#!/bin/sh -ue
#
# Establish ssh tunnels as needed.
#	- Cameron Simpson <cs@zip.com.au> 05may2004
#

: ${LOCATION:=$SYSTEMID}

case $HOST@$LOCATION in
  $HOMEHOST@home) ;;
  *@home)       dest=$HOMEHOST ;;
  *)            dest=home ;;
esac

exec \
  alog alert \
    lock -1 home-alert-log \
      forever -p portfwd -d 10 \
        ssh "$dest" exec tail -f var/log/alert
