#!/bin/sh
#
# Push my account to other places.
#	- Cameron Simpson <cs@zip.com.au>
#

cmd=$0
usage="Usage: $cmd [-f] [login@]hostname..."

hARCH=$ARCH

force=

[ "x$1" = x-f ] && { force=1; shift; }
[ $# = 0 ] && { echo "$cmd: missing login@hostname" >&2
		echo "$usage" >&2
		exit 2
	      }

[ $force ] || needhost $HOMEHOST@home || exit 1

cd || exit 1
set -x
for host
do pfx "$host" syncacc '' "$host" &
done
wait
