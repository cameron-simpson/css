#!/bin/sh
#
# Dispatch a daemon mode fetchmail.
#	- Cameron Simpson <cs@zip.com.au> 14dec2003
#
needhost $HOMEHOST@home || exit 1
set -x
exec acon fetchmail \
	-f /u/cameron/.fetchmailrc \
	-d 900 \
	--logfile /u/cameron/var/log/fetchmail \
	--nobounce --tracepolls --warnings 86400 \
	127.0.0.2 127.0.0.3
