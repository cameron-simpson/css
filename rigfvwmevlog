#!/bin/sh

[ $# = 0 ] || { echo "Usage: $0" >&2; exit 2; }

[ -n "$FVWMEVLOG" ] || { echo "$0: no \$FVWMEVLOG envvar" >&2; exit 1; }
[ -f "$FVWMEVLOG" ] || { echo "$0: no \$FVWMEVLOG log file" >&2; exit 1; }

fifodir=$FVWM_TMPDIR/fifo-$HOST
[ -d "$fifodir/." ] || mkdir -p "$fifodir" || exit 1
fifo=$fifodir/$DISPLAY-`datecode`-$$

FvwmCommand -S "$fifo"
sleep 5
FvwmCommand -f "$fifo" -mi3 -F0 >>"$FVWMEVLOG" &
fvwmmon | FvwmCommand -c &
