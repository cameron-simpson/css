#!/bin/sh
: ${LOGDIR:=$HOME/var/log}
: ${CONSOLE:=$LOGDIR/console}
log=$LOGDIR/httpgetd
queue=$HOME/var/queue/httpgetd
logroll -z +datecode "$queue" "$log"
>>"$log"
>>"$queue"
alog "$log" httpget -Q "$queue" -D 5 -l download
exec >>"$CONSOLE" 2>&1
tail -f "$log" | while read dir; do [ -d "$dir/." ] && fileloc -a "$dir/"*; done &
