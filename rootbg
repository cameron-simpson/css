#!/bin/sh
#
# Set the root backdrop.
#	- Cameron Simpson <cs@zip.com.au> 20nov2000
#

cmd=$0
usage="Usage: $cmd [-s] imagefile
	-s	Synchronous."

[ -n "$DISPLAY" ] || { echo "$cmd: no \$DISPLAY!" >&2; exit 1; }

##con echo "$cmd $*"

tmp=${TMPDIR:-/tmp}

opts=
sync=
perdesk=

badopts=
while :
do  case $1 in
	-s)	sync=1 opts="$opts -s" ;;
	--)	shift; break ;;
	-?*)	echo "$cmd: unrecognised option: $1" >&2
		badopts=1
		;;
	*)	break ;;
    esac
    shift
done

if [ $# = 0 ]
then
    echo "$cmd: missing imagefile" >&2
    badopts=1
else
    imagefile=$1; shift
    [ $# = 0 ] || { echo "$cmd: extra arguments: $*" >&2
		    badopts=1
		  }
fi

[ $badopts ] && { echo "$usage" >&2; exit 2; }

isfile=1
case "$imagefile" in
  http://*)
    # one argument which is an URL
    exec withurl -C "$imagefile" "$0" $opts
    ;;
  X:* | - | *:- | \|* )
    # one argument which is a GraphicsMagick-ish name
    isfile=
    ;;
esac

if [ "$isfile" ]
then
  case "$imagefile" in
    /*) ;; *) imagefile=`pwd`/$imagefile ;;
  esac
fi

# obtain sized version of the image; may be the image itself!
rootbg=`mkwall "$imagefile"` || exit 1

(
  (
    echo "$rootbg" >>$HOME/var/log/rootbg
    ##set -x
    # note backdrop if not a per-desk setting
    lastvalue "rootbg-$HOST" "$rootbg"
  ) &

  fvwm-root --retain-pixmap "$rootbg" \
  && fvwmcmd 'setenv XSESSIONBG pixmap'	# make new terms be transparent
  exit
) &

[ $sync ] && wait
exit 0
