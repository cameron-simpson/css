#!/bin/sh
#
# Simple wrapper for screen.
#	- Cameron Simpson <cs@zip.com.au> 16apr2002
#

cmd=`basename "$0"`
usage="Usage:	$cmd				List sessions.
	$cmd session-name		Join session (shared).
	$cmd -options... [args...]]	Exec screen with supplied arguments."

# nothing? list active sessions
[ $# = 0 ] \
    && { screen -ls \
	 | sed -e '/^	/!d' -e 's/^	\([^	]*\).*/\1/'
	 exit 0
       }

# options - run screen directly
case "$1" in
    -\?)	echo "$usage" >&2; exit 0 ;;
    -*)		exec screen "$@" ;;
esac

[ $# = 1 ] || { echo "$usage" >&2; exit 2; }

case "$1" in
    [1-9]|[1-9][0-9])
	name=`scr | sed -n -e 's/	.*//' -e "$1p"`
	[ -n "$name" ] || { echo "$cmd: no ${1}th session; available sessions:" >&2
			    scr >&2
			    exit 1
			  }
	set x "$name"; shift
	;;
esac

exec screen -a -x -r "$1"
