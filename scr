#!/bin/sh
#
# Simple wrapper for screen to list screens or attach to running session.
#	- Cameron Simpson <cs@zip.com.au> 16apr2002
#

cmd=`basename "$0"`
usage="Usage:	$cmd				List sessions.
	$cmd session-name		Join session (shared).
	$cmd -options... [args...]]	Exec screen with supplied arguments."

# nothing? list active sessions
[ $# = 0 ] \
    && { screen -ls \
	 | sed -e '/^	/!d' -e 's/^	\([^	]*\).*/\1/'
	 exit 0
       }

badopts=
scropts=

while :
do  case $1 in
      -[aAfilLmOqRsUvxX]|-f[na]|-ln)
		scropts="$scropts $1" ;;
      -[cdDerSt])
		scropts="$scropts $1 $2"; shift ;;
      --)	shift; break ;;
      -?*)	echo "$cmd: unrecognised option: $1" >&2; badopts=1 ;;
      *)	break ;;
    esac
    shift
done

if [ $# = 0 ]
then  echo "$cmd: missing screen name or number" >&2; badopts=1
else  name=$1; shift
      [ $# = 0 ] || { echo "$cmd: extra arguments: $*" >&2; badopts=1; }
fi

[ $badopts ] && { echo "$usage" >&2; exit 2; }

case "$name" in
    [1-9]|[1-9][0-9])
	n=$name
	name=`scr | sed -n -e 's/	.*//' -e "${n}p"`
	[ -n "$name" ] || { echo "$cmd: no ${n}th session; available sessions:" >&2
			    scr >&2
			    exit 1
			  }
	;;
esac

exec screen $scropts -a -A -x -r -e '' -h 10240 -l "$name"
