#!/usr/bin/perl
#
# Dispatch email with SMTP.
#	- Cameron Simpson <cs@zip.com.au> 4aug2000
#

BEGIN { use cs::DEBUG; cs::DEBUG::using(__FILE__);
      }

use strict vars;

use cs::Misc;
use cs::Source;
use cs::Mail::Misc;

my $in = new cs::Source (FILE,STDIN);
my $ok = cs::Mail::Misc::smtpsend($in,@ARGV);

exit ($ok ? 0 : 1);
