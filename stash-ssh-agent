#!/bin/sh -u
#
# Stash the SSH environment state variables.
#	- Cameron Simpson <cs@zip.com.au> 01feb2004
#

cmd=$0
usage="Usage: $cmd [-h] [{-|statefile}]"

statefile=

badopts=

if [ $# -gt 0 ] && [ "x$1" = x-h ]
then
  shift
  statefile=`ssh-agent-statefile` || exit 1
  [ -f "$statefile" -a -s "$statefile" ] || exit 1
  . "$statefile"
fi

[ $# = 0 ] || { statefile=$1; shift; }

[ $# = 0 ] || { echo "$cmd: extra arguments: $*" >&2; badopts=1; }

[ $badopts ] && { echo "$usage" >&2; exit 2; }

[ -n "$statefile" ] || statefile=`ssh-agent-statefile` || exit 1

[ "x$statefile" = x- ] || exec >"$statefile"

env \
| sed -n 's/^\(SSH_[_A-Z]*\)=\(.*\)/\1='\''\2'\''; export \1;/p' \
|| { [ "x$statefile" = x- ] || rm -f "$statefile"; exit 1; }

[ "x$statefile" = x- ] && exit 0
exec chmod a+rx "$statefile"
