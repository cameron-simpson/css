#!/bin/sh
#
# Update my ezoshosting web site.
#	- Cameron Simpson <cs@zip.com.au> 11jan2003

needhost $HOMEHOST@home

ezos=$HOME/@/ezos
ezoscgi=$ezos/cgi-bin
ezoshtml=$ezos/html
ezoscss=$ezoshtml/cs/css

set -x

syncezos-rc
rsync -avHPL --delete --exclude=CVS/ $HOME/man/cs/. $ezos/css/man/.

rsync -avHPW --delete --exclude=CVS/ --exclude=/kath $ezos/html/. ezos:public_html/.

syncezos-cgi
rsync -avHPW --delete --exclude=CVS/ $ezos/cgi-bin/. ezos:cgi-bin/.

putacc ezos
