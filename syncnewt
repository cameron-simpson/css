#!/bin/sh

cd || exit 1

needhost amadeus@home || exit 1

set -x

[ $# = 0 ] || exec syncstuff @newt "$@"

syncsmall @newt

for d in s cvs ## mail im
do  syncstuff @newt $d
done

rsync -avHPL var/slideshow/. newt:var/slideshow/.

rsync -avHP --delete \
	--include=/attn \
	--include=/old \
	--include=/out \
	--include=/saved \
	--include=/saved-news \
	--include=/saved-web \
	'--exclude=/*' \
	$HOME/there/cameron@cskk.homeip.net/mail/. \
	newt:there/cameron@cskk.homeip.net/mail/.

wait
