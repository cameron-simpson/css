#!/bin/sh
#
# Subsidiary script to mailrepack, to unpack archive files present.
# If arguments supplied, run that command after unpacking.
#	- Cameron Simpson <cs@zip.com.au> 09jul2002
#

for f in ./*.z
do  [ -s "$f" ] || continue
    type=`file "$f"`
    case "$type" in
	*'Zip archive data'*)
		nf=${f}ip
		mv "$f" "$nf"
		;;
    esac
done

for f in *.*
do
    [ -s "$f" ] || continue
    case "$f" in
	*.tar|*.tgz|*.zip)
		base=`expr "x$f" : 'x\(.*\)\.[^.]*$'` ;;
	*.tar.gz|*.tar.bz2)
		base=`expr "x$f" : 'x\(.*\)\.[^.]*\.[^.]*$'` ;;
	*)	continue ;;
    esac

    mkdir "./$base" || continue
    ( cd "./$base" || exit 1
      x "../$f" && rm "../$f"
    ) || { rm -rf "./$base"; continue; }
done

[ $# = 0 ] || ( pwd; ls -lR; set -x; exec "$@" )
