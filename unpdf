#!/bin/sh
#
# Wrapper for pdftohtml which makes a coarse attempt at paragraphing.
#	- Cameron Simpson <cs@zip.com.au> 01jun2002
#

cmd=`basename "$0"`
usage="Usage: $cmd {file|URL|-}..."

tmpf=${TMPDIR:-/tmp}/$cmd$$.pdf

[ $# = 0 ] && { echo "$cmd: missing arguments" >&2
		echo "$usage" >&2
		exit 2
	      }

xit=0

first=1
for arg
do
  case "$arg" in
    -)		cat ;;
    http://*)	wcat "$arg" ;;
    /*)		cat "$arg" ;;
    *)		cat "./$arg" ;;
  esac >"$tmpf" || { xit=1; continue; }

  # separators
  if [ $first ]
  then  first=
  else  echo '<HR>\n'
  fi

  /opt/pdftohtml/bin/pdftohtml -stdout -noframes "$tmpf" \
  || { xit=1; continue; }
done \
| sed -e 's/^ *<br>$/<P>/' \
| unhtml

trap 'rm "$tmpf"; exit $xit' 0 1 2 13 15

exit $xit
